# Application Settings
APP_NAME="CRM API"
APP_VERSION="0.1.0"
DEBUG=false

# Database Configuration
# For SQLite (development):
DATABASE_URL=sqlite+aiosqlite:///./crm.db

# For PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/crm_db

DATABASE_ECHO=false

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI / Email Intake Configuration
AI_PROVIDER=openai
AI_MODEL=gpt-4o-mini
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Webhook Secrets (for automatic email reception)
# Leave empty to disable webhook validation (not recommended for production)
SENDGRID_WEBHOOK_SECRET=
MAILGUN_WEBHOOK_SECRET=
GENERIC_WEBHOOK_SECRET=
